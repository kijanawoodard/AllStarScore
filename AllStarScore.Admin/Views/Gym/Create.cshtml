@model AllStarScore.Admin.ViewModels.GymCreateCommand

@using (Ajax.BeginForm("Create", "Gym", new AjaxOptions() { UpdateTargetId = "gym_create_display" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create a Gym</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name) <span class="availability_check"></span>
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        
        <span class="for_creation">
            <div class="editor-label class=">
                @Html.LabelFor(model => model.Location)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Location)
                @Html.ValidationMessageFor(model => model.Location)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.IsSmallGym)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.IsSmallGym)
                @Html.ValidationMessageFor(model => model.IsSmallGym)
            </div>

            <p>
                <input type="submit" value="Create" />
                <a href="#" class="cancel">Cancel</a>
            </p>
        </span>
    </fieldset>
}

<script type="text/javascript">
    if (typeof GymModule != 'undefined') {
        GymModule.onLoad();
    }
</script>