@model AllStarScore.Admin.ViewModels.RegistrationRegisterViewModel
@{ Html.RegisterScript("~/content/scripts/registration.register.js"); }

@{
    ViewBag.Title = "Register Gym";
}

<h2>Registration for @Model.Competition.Name</h2>

Gym

@{ Html.RenderPartial("GymCreateHarness"); }

Teams

<div class="team_registration_harness">
    <div class="control_links">
        @Ajax.ActionLink("Teams",  "Teams", "Registration", new { competitionid = @Model.Competition.Id, gymid = "__gymid__"}, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "registered_teams" }, new { @class = "list_get"})
        @Ajax.ActionLink("Register", "Register", "Registration", new { competitionid = @Model.Competition.Id, gymid = "__gymid__" }, new AjaxOptions() { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "team_registration" }, new { @class = "form_get" })
    </div>
    
    <div id="registered_teams"></div>
    <div id="team_registration"></div>
</div>