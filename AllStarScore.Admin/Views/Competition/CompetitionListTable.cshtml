@model IEnumerable<AllStarScore.Admin.Infrastructure.Indexes.TeamRegistrationByCompetition.Results>

@if (Model.Any())
{
    <table>
        <caption></caption>
        <tr>
            <th>First Day</th>
            <th>Name</th>
            <th># Gyms</th>
            <th># Teams</th>
            <th># Participants</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.CompetitionFirstDay, "Day")</td>
                <td>
                    @item.CompetitionName 
                </td>
                <td class="numeric">
                    @item.GymCount 
                </td>
                <td class="numeric">
                    @item.TeamCount
                </td>
                <td class="numeric">
                    @item.ParticipantCount
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Competition", new {id = item.CompetitionId}, new {})
                </td>
            </tr>
        }

    </table>
} else{
    <p>none</p>
}
