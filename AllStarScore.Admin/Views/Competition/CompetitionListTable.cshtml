@model IEnumerable<AllStarScore.Admin.Infrastructure.Indexes.TeamRegistrationStatsByCompetition.Results>

@if (Model.Any())
{
    <table class="tablesorter">
        <caption></caption>
        <thead>
            <tr>
                <th>First Day</th>
                <th>Name</th>
                <th># Gyms</th>
                <th># Teams</th>
                <th># Participants</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => item.CompetitionFirstDay, "Day")</td>
                <td>
                    @item.CompetitionName 
                </td>
                <td class="numeric">
                    @item.GymCount 
                </td>
                <td class="numeric">
                    @item.TeamCount
                </td>
                <td class="numeric">
                    @item.ParticipantCount
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Competition", new {id = item.CompetitionId}, new {})
                </td>
            </tr>
        }
        </tbody>
    </table>
} else{
    <p class="empty">no competitions</p>
}
